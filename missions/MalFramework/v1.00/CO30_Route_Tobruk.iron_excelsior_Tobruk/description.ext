// Mission parameters
class Header {
  gameType =  Coop;  // Game type
	minPlayers =  1;  // Minimum number of players
	maxPlayers = 30;  // Maximum number of players
};


// Loading screen settings
onLoadName = "Route Tobruk";  // Name of the operation
onLoadMission = "5km SE of Tobruk, Libya, North Africa";  // Mission description
author = "Malbryn";  // Author of the mission
loadScreen = "mission_framework\config\img\loading_screen.jpg";  // Loading screen image


// Respawn settings
respawn = "BASE";  // Respawn type ("NONE", "BASE")
respawnButton = 1;  // Enable/disable the respawn button (in the Esc menu)
respawnDelay = 90;  // Respawn delay in seconds
respawnVehicleDelay = 60;  // Vehicle respawn delay in seconds
respawnDialog = 0;  // Displays the respawn dialog ("BASE" respawn only)
respawnOnStart = -1;  // -1 = Don't respawn on start and don't run the respawn script, 0 = Don't respawn on start and run the respawn script, 1 = Respawn on start and run the respawn script
